import java.util.Scanner;
public class Pizza {


  public static void main(String[] args) {
    final int SLICE = 4;
    Scanner scanner = new Scanner(System.in);

    int T = scanner.nextInt();
    int x = scanner.nextInt();
    int calculo;
    
    calculo = (T*x )/SLICE;
    System.out.println(calculo);

         
        
   
}
}
